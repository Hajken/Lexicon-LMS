<h2>Activities</h2>
<table class="table table-bordered table-hover">
    <tr class="success">
        <th>Activities</th>
        <th>Start Date</th>
       <th>Deadline</th>
    </tr>
   
        @foreach (var item in Model.Activities)
        {
            <tr class="success">
               
                <td>
                   @Html.DisplayFor(modelItem=>item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Deadline)
                </td>
            </tr>
        }
</table>

