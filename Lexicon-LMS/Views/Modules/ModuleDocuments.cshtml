<h2>Module Documents</h2>
<table class="table table-bordered table-hover">
   
    <tr class="success">
        <th>@Html.DisplayNameFor(modelItem => modelItem.Documents.First().FileName)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.Documents.First().Description)</th>
        <th>@Html.DisplayNameFor(modelItem => modelItem.Documents.First().Created)</th>
        

    </tr>
   
        @foreach (var item in Model.Documents)
        {
            <tr class="success">
              
                <td>
                   @Html.DisplayFor(modelItem=>item.FileName)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.Created)
                </td>
            </tr>
        }
</table>

